<Window x:Class="Graph.SetPathCostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graph"
        mc:Ignorable="d"
        Title="SetPathCostWindow" Height="200" Width="200" >
    <Grid>
        <Label x:Name="EnterPathCost" Content="Введите стоимость" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SetPathCost" HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="SetPathCost_TextChanged"/>

        <Button x:Name="ConfrimAddPathCostButton" Content="Добавить" HorizontalAlignment="Center" Margin="0,92,0,0" 
        VerticalAlignment="Top" Height="30" Width="120" IsCancel="True"/>

    </Grid>
</Window>
